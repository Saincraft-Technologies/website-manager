<table id="basic-datatable" class="table table-striped td-responsive nowrap" width="100%">
    <thead>
        <tr style="background-color: #313a46; color: #ababab;">
            {{#each headers}}
            {{#ifEquals head 'description'}}
            {{else}}
            <th>{{head}}</th>
            {{/ifEquals}}
            {{/each}}

            <th>options</th>
        </tr>
    </thead>
    <tbody>
        {{#each content_sections}}
        <tr>
            <td style="width:35%; margin:0;">
                <textarea class="form-control" style="overflow: hidden; height:200px; background-color:#fff;" disabled>{{paragraph}}
                </textarea>
            </td>
            <td>{{content.content}}<br>{{content.caption}}
            </td>
            <td>{{section.section}}<br>{{section.caption}}
            <td>
                <div class="dropdown text-center">
                    <button type="button"
                        class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop"
                        data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item"
                            onclick="largeModal('/backend/{{../route}}/edit/{{id}}', 'Update {{model}}','text-info mdi mdi-pencil');"><i
                                class="mdi mdi-update text-info"></i> edit</a>
                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item"
                            onclick="confirmModal('/backend/{{../route}}/delete/{{id}}', showAllManages)"><i
                                class="mdi mdi-delete text-danger"></i> delete</a>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>