<table id="basic-datatable" class="table table-striped td-responsive nowrap" width="100%">
    <thead>
        <tr style="background-color: #313a46; color: #ababab;">
            {{#each headers}}
            {{#ifEquals head 'descriptions'}}
            {{else}}
            {{#ifEquals head 'discord'}}

            {{else}}
            {{#ifEquals head 'facebook'}}
            <th>socials</th>
            {{else}}
            <th>{{head}}</th>
            {{/ifEquals}}
            {{/ifEquals}}
            {{/ifEquals}}
            {{/each}}

            <th>options</th>
        </tr>
    </thead>
    <tbody>
        {{#each teams}}
        <tr>
            <td class="row">
                <div class="mt-1 col-md-8 col-sm-6">
                    Name: {{team}}<br>
                    <span style="text-decoration: underline;">descriptions</span> <br>{{descriptions}}
                </div>
            </td>
            <td>
                <i class="mdi mdi-social"></i> Discord: <a href="http://" target="_blank"
                    rel="noopener noreferrer"><span style="text-decoration: underline;">{{discord}}</span></a><br>
                <i class="mdi mdi-facebook"></i> Facebook: <span style="text-decoration: underline;">{{facebook}}</span>
            </td>
            <td>{{comment}}
            </td>
            <td>
                <div class="dropdown text-center">
                    <button type="button"
                        class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop"
                        data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item"
                            onclick="largeModal('/backend/{{../route}}/edit/{{id}}', 'update {{../model}}', 'mdi mdi-pencil text-info');"><i
                                class="mdi mdi-update text-info"></i> edit</a>
                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item"
                            onclick="mediumModal('/backend/{{../route}}/upload/{{id}}', 'upload {{../model}} image', 'mdi mdi-account-box text-info');"><i
                                class="mdi mdi-account-box text-info"></i> upload</a>
                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item"
                            onclick="confirmModal('/{{../route}}/delete/{{id}}', showAllManages)"><i
                                class="mdi mdi-delete text-danger"></i> delete</a>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>