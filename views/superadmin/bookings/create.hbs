<script src="{{{cdn 'public'}}}/js/select2.min.js"></script>
<form method="POST" class="d-block ajaxForm" action="{{action}}">
    <div class="form-row">
        <div class="form-group row col-md-12">

            <div class="form-group col-md-6">
                <label for="adults">
                    adults
                </label>
                <input type="number" placeholder="adults count" value="{{booking.adults}}" class="form-control"
                    id="adults" name="adults" required>
                <small id="" class="form-text text-muted">
                    provide adults number
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="children">
                    children
                </label>
                <input type="number" placeholder="children count" value="{{booking.children}}" class="form-control"
                    id="children" name="children" required>
                <small id="" class="form-text text-muted">
                    provide children number
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="disabled_adults">
                    disabled adults
                </label>
                <input type="number" placeholder="disabled adults count" value="{{booking.disabled_adults}}"
                    class="form-control" id="disabled_adults" name="disabled_adults" required>
                <small id="" class="form-text text-muted">
                    provide disabled adults number
                </small>
            </div>

            <div class="form-group col-md-6">
                <label for="disabled_children">
                    disabled children
                </label>
                <input type="number" placeholder="disabled children count" value="{{booking.disabled_children}}"
                    class="form-control" id="disabled_children" name="disabled_children" required>
                <small id="" class="form-text text-muted">
                    provide disabled children number
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="special_request">
                    Special request
                </label>
                <input type="text" placeholder="booking number" value="{{booking.special_request}}" class="form-control"
                    id="special_request" name="special_request" required>
                <small id="" class="form-text text-muted">
                    provide booking acc_number
                </small>
            </div>

            <div class="form-group col-md-6">
                <label for="countryId">
                    from country
                </label>
                <select class="form-control select2" name="countryId" id="countryId">
                    <option value="" selected>select country</option>
                    {{#each countries}}
                    {{#ifEquals id ../booking.countryId}}
                    <option value="{{name}}" selected>{{name}} </option>
                    {{else}}
                    <option value="{{name}}">{{name}} </option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
                <small id="" class="form-text text-muted">
                    provide country
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="countryId">
                    from region / city
                </label>
                <input class="form-control select2" placeholder="region / city" name="regionId" id="regionId" value="" />
                <small id="" class="form-text text-muted">
                    provide city
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="receipt_length">
                    receipt_length
                </label>
                <input type="text" placeholder="receipt_length" value="{{booking.receipt_length}}" class="form-control"
                    id="receipt_length" name="receipt_length" required>
                <small id="" class="form-text text-muted">
                    provide booking receipt_length
                </small>
            </div>
        </div>
        <div class="form-group row col-md-12">

            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-info" type="submit">
                    {{#if booking}}
                    update booking
                    {{else}}
                    create booking
                    {{/if}}
                </button>
            </div>
            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-secondary" type="reset" data-dismiss="modal">
                    cancel
                </button>
            </div>
        </div>
</form>

<script>
    $(document).ready(function () {
        $('#countryId').select2({
            dropdownParent: $('#large-modal')
        });
    });

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllManages);
    });
</script>