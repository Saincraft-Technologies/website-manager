<form method="POST" class="d-block ajaxForm" action="{{action}}">
    <div class="form-row">
        <div class="form-group mb-2 col-md-6 offset-2">
            <small id="" class="form-text text-muted offset-2">
                provide image (png format)
            </small>
            <div class="col-md-12 custom-file-upload">
                <div class="wrapper-image-preview" style="margin-left: 6px; ">
                    <div class="box" style="width: 230px; height:270px;">
                        <div class="js--image-preview"
                            style="height:220px; background-image: url({{#if upload}}{{upload.path}}{{else}}{{{cdn 'public'}}}/images/avatar.jpg{{/if}}); background-color: #F5F5F5;">
                        </div>
                        <div class="upload-options">
                            <label for="file" class="btn" style="font-size:medium;"> <i class="mdi mdi-upload mr-1"></i>
                                upload image
                            </label>
                            <input id="file" style="visibility:hidden;" type="file" class="image-upload" name="file"
                                accept="image/png" onchange="">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-2 col-md-8 offset-2">
            <label for="caption">
                image caption
            </label>
            <textarea placeholder="caption .." class="form-control" id="caption" name="caption"
                required>{{upload.caption}}</textarea>
            <small id="" class="form-text text-muted">
                provide caption
            </small>
        </div>
        <div class="form-group mt-2 col-md-6">
            <button class="btn btn-block btn-info" type="submit">
                <img class="hidden loader" src="{{{cdn 'public'}}}/images/loader.gif" alt="" height="10px;">
                <i class="mdi mdi-upload-outline icon" style="font-weight: 600;"></i> upload
            </button>
        </div>
        <div class="form-group mt-2 col-md-6">
            <button class="btn btn-block btn-secondary" type="reset" data-dismiss="modal">
                cancel
            </button>
        </div>
    </div>
</form>

<script>
    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        $('.loader').removeClass('hidden');
        $('.icon').addClass('hidden');
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllManages);
    });
</script>