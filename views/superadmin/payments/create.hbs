<script src="{{{cdn 'public'}}}/js/select2.min.js"></script>
<form method="POST" class="d-block ajaxForm" action="{{action}}">
    <div class="form-row">
        <div class="form-group row col-md-12">
            <div class="form-group col-md-6">
                <label for="receipt">
                    receipt
                </label>
                <input type="text" placeholder="receipt" value="{{payment.receipt}}" class="form-control" id="receipt"
                    name="receipt" required>
                <small id="" class="form-text text-muted">
                    provide receipt should be small letter & no space. Since it is used to create routes.
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="title">
                    title
                </label>
                <input type="text" placeholder="title" value="{{payment.title}}" class="form-control" id="title"
                    name="title" required>
                <small id="" class="form-text text-muted">
                    provide payment title
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="caption">
                    caption
                </label>
                <textarea placeholder="caption .." class="form-control" id="caption" name="caption"
                    required>{{payment.caption}}</textarea>
                <small id="" class="form-text text-muted">
                    provide caption
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="description">
                    description
                </label>
                <textarea placeholder="description .." class="form-control" id="description"
                    name="description">{{payment.description}}</textarea>
                <small id="" class="form-text text-muted">
                    provide description
                </small>
            </div>
        </div>
        <div class="form-group row col-md-12">

            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-info" type="submit">
                    {{#if payment}}
                    update payment
                    {{else}}
                    create payment
                    {{/if}}
                </button>
            </div>
            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-secondary" type="reset" data-dismiss="modal">
                    cancel
                </button>
            </div>
        </div>
</form>

<script>
    $(document).ready(function () {
    });

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllManages);
    });
</script>