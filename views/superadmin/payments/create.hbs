<script src="{{{cdn 'public'}}}/js/select2.min.js"></script>
<form method="POST" class="d-block ajaxForm" action="{{action}}">
    <div class="form-row">
        <div class="form-group row col-md-12">
            <div class="form-group col-md-6">
                <label for="receipt">
                    receipt
                </label>
                <input type="text" placeholder="receipt" value="{{payment.receipt}}" class="form-control" id="receipt"
                    name="receipt" required>
                <small id="" class="form-text text-muted">
                    provide receipt.
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="amount">
                    amount
                </label>
                <input type="number" min="0" placeholder="amount" {{#if payment}}value="{{payment.amount}}"
                    {{else}}value="0" {{/if}} class="form-control" id="amount" name="amount" required>
                <small id="" class="form-text text-muted">
                    provide payment amount
                </small>
            </div>
            <div class="form-group col-md-6">
                <label for="websiteId">
                    website
                </label>
                <select type="text" placeholder="websiteId" value="{{usage.websiteId}}" class="form-control"
                    id="website" name="websiteId" required>
                    <option value="">select website</option>
                    {{#each websites}}
                    {{#ifEquals id ../payment.websiteId}}
                    <option value="{{id}}" selected>{{owner}}</option>
                    {{else}}
                    <option value="{{id}}">{{owner}}</option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
                <small id="" class="form-text text-muted">
                    provide usage website
                </small>
            </div>

            <div class="form-group col-md-6">
                <label for="accountId">
                    account
                </label>
                <select type="text" placeholder="account" class="form-control" id="accountId" name="accountId" required>
                    <option value="">select account</option>
                    {{#each accounts}}
                    {{#ifEquals id ../payment.accountId}}
                    <option value="{{id}}" selected>{{account}}</option>
                    {{else}}
                    <option value="{{id}}">{{account}}</option>
                    {{/ifEquals}}
                    {{/each}}
                </select>
                <small id="" class="form-text text-muted">
                    provide account
                </small>
            </div>
        </div>
        <div class="form-group row col-md-12">

            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-info" type="submit">
                    {{#if payment}}
                    update received payment
                    {{else}}
                    receive payment
                    {{/if}}
                </button>
            </div>
            <div class="form-group mt-2 col-md-6">
                <button class="btn btn-block btn-secondary" type="reset" data-dismiss="modal">
                    cancel
                </button>
            </div>
        </div>
</form>

<script>
    $(document).ready(function () {
        $('#accountId').select2({
            dropdownParent: $('#large-modal')
        });
        $('#website').select2({
            dropdownParent: $('#large-modal')
        });
    });

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllManages);
    });
</script>