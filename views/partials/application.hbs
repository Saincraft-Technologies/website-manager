<form action="/websites/create" class="d-block ajaxForm" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-12">
            <input type="text" class="form-control mt-0 mb-0" id="app_name" name="app_name"
                placeholder="Application name" required />
            <small class="text-nowrap text-muted">
                website-dns
            </small>
        </div>
        <div class="form-group col-12">
            <input type="text" class="form-control mt-0 mb-0" id="organisation_name" name="organisation_name"
                placeholder="Website Owner" required />
            <small class="text-nowrap text-muted">
                website owner
            </small>
        </div>
        <div class="form-group col-12">
            <input type="email" class="form-control mt-0" id="email" name="email" placeholder="atoz@example.com"
                required />
            <small class="text-nowrap text-muted">
                provide email
            </small>
        </div>
        <div class="form-group col-12">
            <input type="text" class="form-control mt-0" id="phone" name="phone" placeholder="phone" required />
            <small class="text-nowrap text-muted">
                phone
            </small>
        </div>
        <div class="form-group col-12">
            <select class="form-control mt-0 select2" name="response_format" id="response_format" required>
                <option value="json" selected>json</option>
                <option value="xml">xml</option>
            </select>
            <small class="text-nowrap text-muted">
                api prefereable respose format
            </small>
        </div>
        <div class="form-container col-12">
            <input type="text" class="form-control mt-2" id="app_route" name="app_route"
                placeholder="http://example.com/" required />
            <small class="text-nowrap text-muted">route to be added to cors
            </small>
            <input type="text" class="form-control mt-2" id="token" name="key" placeholder="generate token" required />
            <small class="text-nowrap text-muted">
                token
            </small>
            <input type="text" class="form-control mt-2" id="app_secret" name="app_secret" placeholder="generate secret"
                required />
            <small class="text-nowrap text-muted">secret
            </small>
            <div class="form-group row">
                <div class="col-md-6">
                    <a href="javascript:void(0);" class="btn btn-sm btn-info mt-1" onclick="generateToken()">Generate
                        Token</a>
                    <small class="text-nowrap text-muted">
                        generate api token for your application
                    </small>
                </div>

                <div class="col-md-6">
                    <a href="javascript:void(0);" class="btn btn-sm btn-info mt-1" style="float:right;"
                        onclick="generateSecret()">Generate
                        Secret</a>
                    <small class="text-nowrap text-muted">
                        generate api secret for your application
                    </small>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-md btn-success mt-1"> <i class="mdi mdi-cog"></i> Save
                        new application configurations</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('#response_format').select2({});
    });

    $(".ajaxForm").validate({}); // Jquery form validation initialization
    $(".ajaxForm").submit(function (e) {
        e.preventDefault();
        var form = $(this);
        ajaxSubmit(e, form, 'POST', showAllWebsites);
    });
</script>